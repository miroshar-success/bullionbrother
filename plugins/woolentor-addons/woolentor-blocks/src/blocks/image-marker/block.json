        "right": "",
        "bottom": "",
        "left": "",
        "unit": "px",
        "link": "yes"
      },
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}} .wlb_image_pointer .wlb_pointer_box h4 { margin: {{markerTitleMargin}}; }"
      }
    },
    "markerDescriptionColor": {
      "type": "string",
      "style": {
