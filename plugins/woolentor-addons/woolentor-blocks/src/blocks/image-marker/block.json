    "markerTitleSize": {
      "type": "string",
      "style": {
        "selector": "{{WOOLENTOR_WRAPPER}} .wlb_image_pointer .wlb_pointer_box h4 { font-size: {{markerTitleSize}}; }"
      }
    },
    "markerTitleMargin": {
